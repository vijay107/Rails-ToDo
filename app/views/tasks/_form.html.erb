<div class="container m-2">
  <%= form_with(model: task) do |form| %>
    <% if task.errors.any? %>
      <div class="alert alert-danger" role="alert" >
        <h3>Errors!</h3>
        <ul>
          <% task.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class=form-group>
      <%= form.label :task_name, 'Enter Task Name', style: "display: block" %>
      <%= form.text_field :task_name, class:"form-control w-25" %>
    </div>

    <div class=form-group>
      <%= form.label :task_description, 'Enter Task Description', style: "display: block" %>
      <%= form.text_field :task_description, class:"form-control" %>
    </div>

    <div class=form-group>
      <%= form.label :deadline, 'Enter Deadline for Task',style: "display: block" %>
      <%= form.datetime_field :deadline, class:"form-control w-25" %>
    </div>

    <div class=form-group>
      <%= form.submit class:"btn btn-warning mt-3" %>
    </div>
  <% end %>
</div>