<section class="vh-100" style="background-color: #9A616D;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <%= image_tag("todo.jpeg", :alt => "rss feed", class:"img-fluid", style:"border-radius: 1rem 0 0 1rem;") %>
            </div>
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { data: { turbo: false} }) do |f| %>
                  
                  <div class="d-flex align-items-center mb-3 pb-1">
                    <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                    <span class="h1 fw-bold mb-0", style= "color: brown; font-size:50px;">ToDo</span>
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                  <%= devise_error_messages! %>
                    <% flash.each do |key, value| %>
                      <div style="color:red;", class="flash <%= key %>"><%= value%></div>
                    <% end %>
                    
                  <div class="form-outline mb-4">
                    <%= f.label :email, class:"form-label" %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-lg" %>   
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.label :password, class:"form-label" %><br />
                    <%= f.password_field :password, autocomplete: "current-password", class:"form-control form-control-lg"%>
                  </div>
                  
                  <% if devise_mapping.rememberable? %>
                    <div class="field">
                    <%= f.check_box :remember_me, class:"form-check-input" %>
                    <%= f.label :remember_me, class:"form-label" %>
                    </div>
                  <% end %>

                  <div class="pt-1 mb-4">
                    <%= f.submit "Log in", class:"action btn btn-dark btn-lg btn-block"%>
                  </div>

                  <%= link_to "Forgot your password?", new_password_path(resource_name) , style:"font-size:18px;" %>
                  <p class="mb-5 pb-lg-2" style="color: #393f81;margin-top:10px;font-size:18px;">Don't have an account? <%= link_to 'Register here', new_user_registration_path, style:"color: #795CB2;" %></p>
                      
                <% end %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
